<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bkkjatim.techno.com.bkk_andro" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:name=".config.AppController"
        android:theme="@style/AppTheme"
        android:icon="@mipmap/ic_launcher"
        android:logo="@mipmap/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".splash.Splash"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.Login"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".login.Login_alumni"
            android:label="Kembali"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".login.Login_perusahaan"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".login.Login_sekolah"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".News.NewsDetail"
            android:screenOrientation="portrait"
            android:parentActivityName=".News.News"/>

        <activity android:name=".profile.Profile"
            android:screenOrientation="portrait"
            android:parentActivityName=".News.News"/>

        <activity
            android:name=".News.News"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>
    </application>

</manifest>
